<% flash.each do |key, value| %>
  <div>
    <%= value %>
  </div>
<% end %>

<% if user_signed_in? %>
  <p>Signed in as <%= current_user.name %> | <%= link_to 'log out', destroy_user_session_path, method: :delete %></p>
  <ul class="nav nav-pills">
    <li class="nav-item"><%= link_to 'Home', root_path, { :class=>"nav-link #{current_class?(root_path)}" } %></li>
    <li class="nav-item"><%= link_to 'Users', users_path, { :class=>"nav-link #{current_class?(users_path)}" }  %></li>
  </ul>
<% end %>